{
  "extends": ["airbnb", "plugin:prettier/recommended", "prettier/react"],

  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },

  "globals": {
    "React": true
  },
  
  "parser": "babel-eslint",

  "ecmaFeatures": {
    "jsx": true
  },

  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/destructuring-assignment": ["never"]
  }
}
